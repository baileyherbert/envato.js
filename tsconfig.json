{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmitOnError": true,
        "stripInternal": true,
        "strictNullChecks": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "types": ["node"]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
